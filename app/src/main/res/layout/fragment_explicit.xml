<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FF5722"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/v_middle_explicit"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_view_bundle"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_explicit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Explicit Login"
        android:textColor="#fff"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/v_middle_explicit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_explicit_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_edit_text_explicit"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:hint="Phone Number"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingStart="22dp"
        android:paddingTop="12dp"
        android:paddingEnd="22dp"
        android:paddingBottom="12dp"
        android:text=""
        android:textColor="#FF5722"
        android:textSize="21sp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="@id/v_middle_explicit"
        app:layout_constraintStart_toStartOf="@id/v_middle_explicit"
        app:layout_constraintTop_toTopOf="@+id/v_middle_explicit" />

    <Button
        android:id="@+id/btn_explicit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send to Phone Dialer"
        android:textSize="21sp"
        android:fontFamily="@font/roboto_light"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/bg_explicit_button"
        android:translationZ="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintStart_toStartOf="@id/v_middle_explicit"
        app:layout_constraintEnd_toEndOf="@id/v_middle_explicit"
        app:layout_constraintBottom_toBottomOf="@id/v_middle_explicit"/>

</androidx.constraintlayout.widget.ConstraintLayout>