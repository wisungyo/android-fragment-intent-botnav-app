<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E51E66"
    tools:context=".BundleResponseActivity">

    <View
        android:id="@+id/view_response"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_view_response"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_hello_parcelable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Wisnu!"
        android:fontFamily="@font/roboto_bold"
        android:textSize="40sp"
        android:textColor="#E51E66"
        android:layout_marginTop="48dp"
        android:translationZ="8dp"
        app:layout_constraintTop_toTopOf="@id/view_response"
        app:layout_constraintStart_toStartOf="@id/view_response"
        app:layout_constraintEnd_toEndOf="@id/view_response" />

    <TextView
        android:id="@+id/tv_subtitle_parcelable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='You login with "abc" password'
        android:textSize="18sp"
        android:textColor="#E51E66"
        android:layout_marginTop="8dp"
        android:translationZ="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hello_parcelable"
        app:layout_constraintStart_toStartOf="@id/view_response"
        app:layout_constraintEnd_toEndOf="@id/view_response"/>

</androidx.constraintlayout.widget.ConstraintLayout>